#!/usr/bin/env python

import glob
import os
import fnmatch

def build(bld):
    bld.program(source=bld.path.ant_glob(["**/*cpp"]),
                target="game",
                includes=[".", "../external/tinythread", "../external/glfw"],
                cxxflags=["-g"],
                framework="OpenGL CoreServices Cocoa",
                uselib="glog",
                use="tinythread glfw gc")